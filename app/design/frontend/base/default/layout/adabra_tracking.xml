<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <block type="adabra_tracking/base" name="adabra_tracking_base" template="adabra/tracking/base.phtml" />
            <block type="adabra_tracking/private" name="adabra_tracking_private" template="adabra/tracking/action.phtml">
                <action method="setEsiOptions">
                    <params>
                        <access>private</access>
                        <flush_events>
                            <sales_quote_save_after/>
                            <customer_register_success/>
                            <customer_login />
                            <customer_logout />
                        </flush_events>
                    </params>
                </action>
            </block>
        </reference>
        <reference name="before_body_end">
            <block type="adabra_tracking/queue" name="adabra_tracking_queue" template="adabra/tracking/action.phtml">
                <action method="setEsiOptions">
                    <params>
                        <access>private</access>
                        <ttl>0</ttl>
                    </params>
                </action>
            </block>
        </reference>
    </default>

    <catalog_category_default>
        <reference name="before_body_end">
            <block type="adabra_tracking/category" name="adabra_tracking" template="adabra/tracking/action.phtml" />
        </reference>
    </catalog_category_default>

    <catalog_category_layered>
        <reference name="before_body_end">
            <block type="adabra_tracking/category" name="adabra_tracking" template="adabra/tracking/action.phtml" />
        </reference>
    </catalog_category_layered>

    <catalog_product_view>
        <reference name="before_body_end">
            <block type="adabra_tracking/product" name="adabra_tracking" template="adabra/tracking/action.phtml" />
        </reference>
    </catalog_product_view>

    <catalogsearch_result_index>
        <reference name="before_body_end">
            <block type="adabra_tracking/search" name="adabra_tracking" template="adabra/tracking/action.phtml" />
        </reference>
    </catalogsearch_result_index>
</layout>